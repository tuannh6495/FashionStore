<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FashionStore.WebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FashionStore.WebApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body>
    <header>
        <div class="no-login">
            <span>Sign up and get 20% off to your first order.</span>
            <a href="#">Sign Up Now</a>
            <span class="close-icon">&times;</span>
        </div>

        <nav class="navbar">
            <div class="navbar-logo">
                <a href="#">SHOP.CO</a>
            </div>

            <ul class="nav-link">
                <li><a href="#">Shop
                        <i class="fas fa-chevron-down dropdown-icon"></i>
                </a></li>
                <li><a href="#">On Sale</a></li>
                <li><a href="#">New Arrivals</a></li>
                <li><a href="#">Brands</a></li>
            </ul>

            <div class="search-bar">
                <i class="fas fa-search search-icon"></i>
                <input type="text" placeholder="Search for products...">
            </div>

            <div class="icons">
                <a href="#"><i class="fas fa-shopping-cart cart-icon"></i></a>
                <a href="#"><i class="fas fa-user user-icon"></i></a>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-light py-5">
        <div class="newsletter bg-dark text-white py-4">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-8 text-left align-items-center">
                        <h2 class="font-weight-bold">STAY UPTO DATE ABOUT <br> OUR LATEST OFFERS</h2>
                    </div>
                    <div class="col-4" style="padding-right: 5%">
                        <form class="d-inline inline-column justify-content-start align-items-center">
                            <div class="email-input">
                                <span class="envelope-icon" style="left: 15px; top: 50%; transform: translateY(-50%); color: #aaa;">
                                    <i class="fas fa-envelope"></i>
                                </span>
                                <input type="email" class="form-control pl-5" placeholder="Enter your email address">
                            </div>
                            <button type="submit" class="btn btn-light mt-3 w-100">Subscribe to Newsletter</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="row mt-5">
                <div class="col-md-4 col-sm-12">
                    <h3 class="font-weight-bold justify-content-start">SHOP.CO</h3>
                    <p class="mt-3">We have clothes that suits your style and <br> which you're proud to wear. From <br> women to men.</p>
                    <div class="d-flex justify-content-start mt-4">
                        <a href="#" class="text-dark mr-3"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="facebook-icon text-dark mr-3"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="text-dark mr-3"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-dark"><i class="fab fa-github"></i></a>
                    </div>
                </div>

                <div class="col-md-2 col-6 mb-4">
                    <h5 class="font-weight-bold mb-4">COMPANY</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-dark">About</a></li>
                        <li><a href="#" class="text-dark">Features</a></li>
                        <li><a href="#" class="text-dark">Works</a></li>
                        <li><a href="#" class="text-dark">Career</a></li>
                    </ul>
                </div>

                <div class="col-md-2 col-6 mb-4">
                    <h5 class="font-weight-bold mb-4">HELP</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-dark">Customer Support</a></li>
                        <li><a href="#" class="text-dark">Delivery Details</a></li>
                        <li><a href="#" class="text-dark">Term & Conditions</a></li>
                        <li><a href="#" class="text-dark">Privacy Policy</a></li>
                    </ul>
                </div>

                <div class="col-md-2 col-6 mb-4">
                    <h5 class="font-weight-bold mb-4">FAQ</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-dark">Account</a></li>
                        <li><a href="#" class="text-dark">Manage Deliveries</a></li>
                        <li><a href="#" class="text-dark">Orders</a></li>
                        <li><a href="#" class="text-dark">Payments</a></li>
                    </ul>
                </div>

                <div class="col-md-2 col-6 mb-4">
                    <h5 class="font-weight-bold mb-4">RESOURCES</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-dark">Free eBooks</a></li>
                        <li><a href="#" class="text-dark">Development Tutorial</a></li>
                        <li><a href="#" class="text-dark">How to - Blog</a></li>
                        <li><a href="#" class="text-dark">Youtube Playlist</a></li>
                    </ul>
                </div>
            </div>

            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mt-4" style="border-top: 1px solid #ddd; padding-top: 15px; ">
                <p class="mb-2 mb-md-0">Shop.co © 2000-2023, All Rights Reserved</p>
                <div>
                    <img src="\Images\Visa.png" alt="Visa" class="mr-2" style="width: 40px;">
                    <img src="\Images\MasterCard.png" alt="Visa" class="mr-2" style="width: 40px;">
                    <img src="\Images\Paypal.png" alt="Visa" class="mr-2" style="width: 40px;">
                    <img src="\Images\ApplePay.png" alt="Visa" class="mr-2" style="width: 40px;">
                    <img src="\Images\GooglePay.png" alt="Visa" class="mr-2" style="width: 40px;">
                </div>
            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>