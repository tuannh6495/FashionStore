@model FashionStore.WebApp.Models.OrderSummaryViewModel

<div class="your-cart">
	<div class="order-text-cart">Order Summary</div>
	<div class="total-price">
		<div class="line-price">
			<div class="text-total-price">Subtotal </div>
			<div class="price-cart-total">$@Model.Subtotal.ToString("0")</div>
		</div>
		<div class="line-price">
			<div class="text-total-price">Discount (-20%) </div>
			<div class="price-cart-total" style="color: #F33;">- $@Model.DiscountAmount.ToString("0")</div>
		</div>
		<div class="line-price">
			<div class="text-total-price">Delivery Fee </div>
			<div class="price-cart-total">$@Model.DeliveryFee.ToString("0")</div>
		</div>
		<div class="cart-line"></div>
		<div class="line-price">
			<div class="text-total-price" style="color: #000;">Total </div>
			<div class="price-cart-total">$@Model.Total.ToString("0")</div>
		</div>
	</div>
	<div class="line-price" style="gap:12px">
		<div class="add-promo-code">
			<img src="~/Images/Pen.png" alt="Add promo code" class="icon-select-cart" />
			<input type="text" placeholder="Enter promo code" class="promo-code-input" />
		</div>
		<button class="apply-cart">Apply</button>
	</div>

	<div class="apply-cart" style="height: 60px;">
		Go to Checkout
		<img src="~/Images/Arrow-Down.png" alt="Add promo code" class="icon-select-cart" />
	</div>
</div>
</div>
