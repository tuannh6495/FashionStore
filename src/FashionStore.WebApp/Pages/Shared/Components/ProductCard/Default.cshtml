@using ProductVC

<link rel="stylesheet" href="~/css/ProductCard.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<div class="card custom-card">
    @* <a asp-controller="Brand" asp-action="Details" asp-route-name="CalvinKlein" alt="CalvinKlein"></a> *@
    <img class="card-img-top" src="@Model.ImageUrls[0]">
    <div class="card-body">
        <h1 class="card-title">@Model.Name</h1>
        <div class="card-text">
            <div class="card-rate">
                @for (int i = 1; i <= 5; i++)
                {
                    if (i <= Math.Floor(Model.AvgRating))
                    {
                        <i class="fa fa-star" style="color: gold;"></i>
                    }
                    else if (i == Math.Ceiling(Model.AvgRating))
                    {
                        <i class="fa fa-star-half-alt" style="color: gold;"></i>
                    }
                    else
                    {
                        <i class="fa fa-star-o"></i>
                    }
                }
                <span>@Model.AvgRating.ToString("0.0")/5</span>
            </div>

            <div class="price">
                <h5>@Model.Unit@Model.Price</h5>
            </div>
        </div>
    </div>
</div>




