@using ReviewVC

<link rel="stylesheet" href="~/css/ReviewCard.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<div class="card review-card">
    <div class="card-body">
        <div class="review-card-rate">
            @for (int i = 1; i <= 5; i++)
            {
                if (i <= Math.Floor(Model.ReviewRating))
                {
                    <i class="fa fa-star" style="color: gold;"></i>
                }
                else if (i == Math.Ceiling(Model.ReviewRating) && Model.ReviewRating % 1 == 0.5)
                {
                    <i class="fa fa-star-half-alt" style="color: gold;"></i>
                }
                else
                {
                    <i class="fa fa-star-o"></i>
                }
            }
        </div>

        <p class="name-review d-flex">
            @Model.NameCustomer
            <img src="\Images\Frame.jpg">
        </p>

        <p class="card-text comment">@Model.Comment</p>
        @if (Model.IsDatePostShowed)
        {
            <p class="card-text date-post">Posted on @Model.DatePost</p>
        }
    </div>
</div>
