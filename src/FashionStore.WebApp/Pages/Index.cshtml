@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div class="container-fluid p-5" style="background-color: #F2F2F2;">
    <div class="row">
        <!-- Left side with text -->
        <div class="col-lg-6 d-flex flex-column justify-content-center">
            <h1 class="display-4 font-weight-bold">FIND CLOTHES THAT MATCHES YOUR STYLE</h1>
            <p class="lead">Browse through our diverse range of meticulously crafted garments, designed to bring out your individuality and cater to your sense of style.</p>
            <a asp-controller="Shop" asp-action="Index" class="btn btn-dark  ">Shop Now</a>
            <div class="row mt-4">
                <div class="col-4">
                    <h3>200+</h3>
                    <p>International Brands</p>
                </div>
                <div class="col-4">
                    <h3>2,000+</h3>
                    <p>High-Quality Products</p>
                </div>
                <div class="col-4">
                    <h3>30,000+</h3>
                    <p>Happy Customers</p>
                </div>
            </div>
            
        </div>

        <!-- Right side with image -->
        <div class="col-lg-6 position-relative overflow-hidden d-none d-lg-block">
            <div class="h-100 w-100 d-flex align-items-end">
                <img src="~/images/HomeBanner.jpg" alt="Fashion Style" class="img-fluid w-100" style="height: 50vh; object-fit: cover; object-position: top;">
            </div>
        </div>
    </div>
</div>


