@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<link rel="stylesheet" href="~/css/Index.css" asp-append-version="true" />

<div class="container-fluid mast-head">
    <div class="row align-items-center">
        <div class="col-lg-6 py-5" style="margin-left: 5%;">
            <div class="row headline">FIND CLOTHES THAT MATCHES YOUR STYLE</div>
            <div class="row masthead-desc" style="width: 545px; height: 33px;">Browse through our diverse range of meticulously crafted garments, designed to bring out your individuality and cater to your sense of style.</div>
            <a asp-controller="Shop" asp-action="Index" class="btn btn-dark btn-lg" style="width: 210px; height: 52px; margin-bottom: 48px; border-radius: 25px;">Shop Now</a>
            <div class="row statistic">
                <div class="col-4">
                    <h3>200+</h3>
                    <p>International Brands</p>
                </div>
                <div class="col-4">
                    <h3>2,000+</h3>
                    <p>High-Quality Products</p>
                </div>
                <div class="col-4">
                    <h3>30,000+</h3>
                    <p>Happy Customers</p>
                </div>
            </div>
        </div>

        <div class="col-lg-6 invisible">

        </div>
    </div>
</div>

<div class="container-fluid bg-dark text-white mb-5" style="padding-left: 5%; padding-right: 5%;">
    <div class="row brand-nav text-center align-items-center justify-content-between" style="height: 122px;">
        <div class="col-lg-2 col-sm">
            <h5>
                <a asp-controller="Brand" asp-action="Details" asp-route-name="Versace"> <img src="\Images\Versace.png" alt="Versace"></a>
            </h5>
        </div>
        <div class="col-lg-2 col-sm">
            <h5>
                <a asp-controller="Brand" asp-action="Details" asp-route-name="Zara"> <img src="\Images\Zara.png" alt="Zara"></a>
            </h5>
        </div>
        <div class="col-lg-2 col-sm">
            <h5>
                <a asp-controller="Brand" asp-action="Details" asp-route-name="Gucci"> <img src="\Images\Gucci.png" alt="Gucci"></a>
            </h5>
        </div>
        <div class="col-lg-2 col-sm">
            <h5>
                <a asp-controller="Brand" asp-action="Details" asp-route-name="Prada"> <img src="\Images\Prada.png" alt="Prada"></a>
            </h5>
        </div>
        <div class="col-lg-2 col-sm">
            <h5>
                <a asp-controller="Brand" asp-action="Details" asp-route-name="CalvinKlein"> <img src="\Images\CalvinKlein.png" alt="CalvinKlein"></a>
            </h5>
        </div>
    </div>
</div>

<div class="container-fluid outstanding-product mb-5" style="padding-left: 7%; padding-right: 7%;">
    <div class = "container-fluid new-arrivals mb-5">
        <div class="text-center my-5">
            <h1 class="outstanding">NEW ARRIVALS</h1>
        </div>

        <div class="row">
            @foreach (var product in Model.Products1)
            {
                    <div class="col-md-3">
                    @await Component.InvokeAsync("ProductCard", product)
                    </div>
            }
        </div>

        <div class="row mb-5">
            <div class="col-12 col-md-2 offset-md-5 mt-3">
                <a asp-controller="Shop" asp-action="Index" class="btn btn-outline-dark btn-lg w-100" style="border-radius: 62px; max-width: 500px;">View All</a>
            </div>
        </div>
    </div>

    <div class="container-fluid my-5">
        <hr class="my-4 w-100" style="border: 1px solid rgba(0, 0, 0, 0.10);">
    </div>

    <div class="container-fluid top-selling">
        <div class="text-center my-5">
            <h1 class="outstanding">TOP SELLING</h1>
        </div>

        <div class="row">
            @foreach (var product in Model.Products2)
            {
                <div class="col-md-3">
                    @await Component.InvokeAsync("ProductCard", product)
                </div>
            }
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-md-2 offset-md-5 mt-3">
            <a asp-controller="Shop" asp-action="Index" class="btn btn-outline-dark btn-lg w-100" style="border-radius: 62px; max-width: 500px;">View All</a>
        </div>
    </div>

</div>

<div class="container-fluid dress-style mt-5" style="padding-left: 7%; padding-right: 7%;">
    <div class="card p-5 shadow-sm" style="background-color: #F2F2F2; border-radius: 40px;">
        <h3 class="outstanding my-5">BROWSE BY DRESS STYLE</h3>

        <div class="row mt-4 d-flex">
            <div class="col-md-4 mb-3 d-flex">
                <div class="card w-100" style="border-radius: 20px; overflow: hidden;">
                    <img src="\Images\CasualDS.png" class="card-img" style="object-fit: cover; height: 100%; width: 100%;">
                    <div class="card-img-overlay">
                        <h5 class="card-title fs-1">Casual</h5>
                    </div>
                </div>
            </div>

            <div class="col-md-8 mb-3 d-flex">
                <div class="card w-100" style=" border-radius: 20px; overflow: hidden;">
                    <img src="\Images\FormalDS.png" class="card-img" style="object-fit: cover; height: 100%; width: 100%;">
                    <div class="card-img-overlay">
                        <h5 class="card-title fs-1">Formal</h5>
                    </div>
                </div>
            </div>
        </div>

        <div class="row d-flex">
            <div class="col-md-8 mb-3 d-flex">
                <div class="card w-100" style=" border-radius: 20px; overflow: hidden;">
                    <img src="\Images\PartyDS.png" class="card-img" style="object-fit: cover; height: 100%; width: 100%;">
                    <div class="card-img-overlay">
                        <h5 class="card-title fs-1">Party</h5>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-3 d-flex">
                <div class="card w-100" style=" border-radius: 20px; overflow: hidden;">
                    <img src="\Images\GymDS.png" class="card-img" style="object-fit: cover; height: 100%; width: 100%;">
                    <div class="card-img-overlay">
                        <h5 class="card-title fs-1">Gym</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





